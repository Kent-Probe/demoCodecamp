---
type Props = {
    title: string;
    link: string;
    date: string | undefined;
};
const { title, link, date } = Astro.props;

const hasDate = date !== undefined;
---

<article>
    <a href={link} target="_blank">
        <header>{title}</header>
        <div class="content">
            <p>Alojado en: {link}</p>
            {hasDate && <p>{date}</p>}
        </div>
    </a>
</article>


<style>
    article{
        width: 100%;
        height: auto;
        min-height: 160.8px;
    }
    a {
        width: 100%;
        min-height: 160.8px;

        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        padding: 1.25rem;
        border-radius: 0.5rem;
        background: var(--Background-Brand-Primary, #523AC8);
        transition: background 0.3s ease-in-out;
        &:hover{
            background: var(--Background-Brand-Secondary, #3D2F8B);
        }
    }

    header{
        color: #EEF0FF;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        font-family: Poppins;
        font-size: 2.5rem;
        font-style: normal;
        font-weight: 700;
        line-height: 120%; /* 3rem */
        letter-spacing: -0.05rem;
    }

    .content{
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        & > p{
            color: #EEF0FF;
            font-family: Poppins;
            font-size: 1.25rem;
            font-style: normal;
            font-weight: 400;
            line-height: 120%; /* 1.5rem */
            letter-spacing: -0.025rem;
        }
    }
</style>