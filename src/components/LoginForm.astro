---
import { navigate } from "astro:transitions/client";
import { slide } from 'astro:transitions';
import Logo from "../assets/icon/logo.astro";
---

<script>
import { navigate } from "astro:transitions/client";

  const onClick = () => {
    navigate("/campus");
  }

  const buttons = document.querySelectorAll("[data-login-button]");
  buttons.forEach((button) => {
    button.addEventListener("click", onClick);
  });
</script>

<div class="login">
  <div class="img" >
    <Logo />
  </div>
  <h1 class="title">Bienvenido</h1>
  <form class="form" action="">
    <div class="Inputfield">
      <label class="Label">Correo electrónico</label>
      <input class="Input" type="email" placeholder="correo@unadvirtual.edu.co" />
    </div>
    <div class="Inputfield">
      <label class="Label">Contraseña</label>
      <input class="Input" type="password" autocomplete="false" placeholder="*******" />
    </div>
  </form>
  <button data-login-button class="button" type="button">Iniciar sesión</button>
</div>

<style>
  .login {
    display: flex;
    width: 100%;
    height: 100%;
    padding: 9.375rem 5.1875rem 2.4375rem 4.0625rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 3rem;
    flex-shrink: 0;
    background: var(--Background-Default-Primary, #16161A);
    font-family: Poppins; 
    @media (max-width: 768px){
      padding: 2.4375rem 2.4375rem 2.4375rem 2.4375rem;
    }
  }
  
  .img{
    width: 177px; 
    height: 182px; 
    border-radius: 16px;
  }
  
  .title{
    color: var(--Text-Default-Primary, #FFFFFE);
    text-align: center;
    font-family: Poppins;
    font-size: 3rem;
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    letter-spacing: -0.06rem;
  }

  .form{
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;

    & > .Inputfield {
      display: flex;
      gap: 0.4rem;
      flex-direction: column;
      width: 100%;
      & > label{
        width: 100%;
        color: var(--Text-Default-Primary, #FFFFFE);
        font-family: var(--Fonts-Geometric-Sans-Serif, Poppins);
        font-size: var(--Body-Size-Base, 1rem);
        font-style: normal;
        font-weight: var(--Body-Font-Weight-Regular, 400);
        line-height: 120%;
        letter-spacing: -0.02rem;
      }

      & > input{ 
        width: 100%;
        height: 50px;
        padding-left: 16px;
        padding-right: 16px;
        background: #1E1E24;
        border-radius: 4px;
        color: #FFFFFE;
        font-size: 1rem;
        font-family: Poppins;
        font-weight: 400;
        line-height: 24px;
        border: none;
      }
    }
  }
  
  .button{
    width: 100%;
    height: 50px;

    border-radius: 4px;
    border: none;
    background: #523AC8;
    color: var(--Text-Default-Primary, #FFFFFE);
    
    text-align: center;
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 400;
    letter-spacing: -0.025rem;

    transition: background 0.3s ease-in-out;
    cursor: pointer;

    &:hover{
      background: #3D2A9A;
    }
  }
</style>
