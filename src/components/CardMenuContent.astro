---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import Icon from '../assets/icon/Icon.astro';

type Props = {
    img: ImageMetadata;
    title: string;
    description: string;
    href: string;
}

const { img, title, description, icon, href } = Astro.props

---

<a href={href}>
    <div class="img-container">
        <Image src={img} alt={"Imagen que representa el compoentne"} />
    </div>
    <div class="content-principal">
        <Icon />
        <p>
            {title}
        </p>
    </div>
    <p class="content-description">
        {description}
    </p>
</a>

<style>
    a {
        padding: 1.25rem 1.875rem;
        width: 30.5625rem;
        height: 23.4375rem;
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 0.625rem;
        flex-shrink: 0;

        border-radius: 0.625rem;
        background-color: var(--Background-Brand-Primary, #523AC8);
        transition: background-color 0.3s ease-in-out;

        &:hover{
            background-color: var(--Background-Brand-Secondary, #3D2F8B);
        }
    }

    .img-container{
        width: 100%;
    }

    .content-principal{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: var(--Scales-Scale-04, 1.25rem);
        align-self: stretch;
        
        & > p {
            color: #EEF0FF;
            /* Headers/Header 3 */
            font-family: var(--Fonts-Geometric-Sans-Serif, Poppins);
            font-size: var(--Subtitle-Size-Base, 2rem);
            font-style: normal;
            font-weight: var(--Number-Weight-Weight-Bold, 700);
            line-height: 120%; /* 2.4rem */
            letter-spacing: -0.04rem;
            
            text-shadow: 4px 4px 5px rgba(0, 0, 0, 0.3);

        }
    }

    .content-description{
        color: #E0E4FF;
        /* Paragraphs/Body Large */
        font-family: var(--Fonts-Geometric-Sans-Serif, Poppins);
        font-size: var(--Body-Size-Large, 1.25rem);
        font-style: normal;
        font-weight: var(--Body-Font-Weight-Regular, 400);
        line-height: 120%; /* 1.5rem */
        letter-spacing: -0.025rem;
    }
</style>
