---
import { Image } from "astro:assets";
type Props = {
    title: string;
    description: string;
    image: ImageMetadata;
};

const { title, description, image } = Astro.props;

---

<div class="card">
    <div class="face front">
        <div>
            <Image src={image} alt={"Imagen del logro"}/>
        </div>
        <h3>{title}</h3>
    </div>
    <div class="face back">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</div>

<style>
    h3{
        color: #E0E4FF;

        text-align: center;
        text-transform: capitalize;    
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        font-family: "Potta One";
        font-size: 3.125rem;
        font-style: normal;
        font-weight: 400;
        line-height: 120%;
        letter-spacing: -0.0625rem;
    }

    p{
        color: #FFF;
        font-family: Poppins;
        font-size: 1.1875rem;
        font-style: normal;
        font-weight: 400;
        line-height: 120%; /* 2.625rem */
        letter-spacing: -0.04375rem;
        text-align: center;
    }
    .card {
        position: relative;
        width: 21.8125rem;
        height: 25.5rem;
        cursor: pointer;
    }

    .card .face {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        overflow: hidden;
        transition: .5s;
    }

    .card .front {
        transform: perspective(600px) rotateY(0deg);        
    }

    .card .back {
        transform: perspective(600px) rotateY(180deg);
        
        padding: 1.25rem;
        border-radius: 2.125rem;
        
        display: flex;
        flex-direction: column;
        justify-content: start;
        gap: 2.5rem;
        
        color: #f3f3f3;
        background: var(--Background-Brand-Primary, #523AC8);
        box-shadow: 0 5px 10px #000;
    }

    .card:hover .front {
        transform: perspective(600px) rotateY(180deg);
    }

    .card:hover .back {
        transform: perspective(600px) rotateY(360deg);
    }


</style>