---
import CardCourse from "../../../components/CardCourse.astro"
import MenuHeader from "../../../components/MenuHeader.astro"
import SearchComponente from "../../../components/SearchComponente.astro"
import LayoutPrincipal from "../../../layouts/LayoutPrincipal.astro"


const navItems = [
    {
        name: 'Campus',
        link: '/campus'
    },
    {
        name: 'Todos los cursos',
        link: '/campus/allCourses'
    }
]
---

<LayoutPrincipal title="Todos los cursos">
    <section>
        <MenuHeader navItems={navItems} />
        <div>
            <SearchComponente />
            <div class="content-cards">
                <CardCourse title="C#" level="Basico - avanzado" pts="+ 2000pts" completed="5/105" href="/campus/course" hasFooter={true} />
                <CardCourse title="JavaScript" level="Basico - avanzado" pts="+ 2000pts" completed="5/105" href="/campus/course" hasFooter={true} />
                <CardCourse title="Interview 2" level="Basico - avanzado" pts="+ 2000pts" completed="5/105" href="/campus/course" hasFooter={true} />
                <CardCourse title="POO" level="Basico - avanzado" pts="+ 2000pts" completed="5/105" href="/campus/course" hasFooter={true} />
            </div>
        </div>
    </section>
</LayoutPrincipal>

<style>
    section{
        width: 80%;

        & > div{
            width: calc(50% + 20rem);
            display: flex;
            flex-direction: column;
            justify-items: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
            margin: 2rem;
        }
    }


    .content-cards{
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-items: start;
        align-items: start;
        flex-wrap: wrap;
        gap: 2rem;
    }
</style>