---
import { Image } from 'astro:assets';
import Banner from '../assets/images/image-2.webp';
import LoginForm from '../components/LoginForm.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="codecamp">
	<main>
		<section class="left">
			<h1>Explora el mundo de la programaci√≥n</h1>
			<div>
				<Image src={Banner} alt="Imagen principal de la aplicacion" />
			</div>
		</section>
		<section class="right">
			<LoginForm />
		</section>
	</main>
</Layout>

<style>
	main {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: row;
	}

	.left{
		flex-grow: 3;
		height: 100%; 
		position: relative;
		background: linear-gradient(0deg, rgba(0, 0, 0, 0.52) 0%, rgba(0, 0, 0, 0.52) 100%);

		& > h1 {
			position: absolute;
			bottom: 20%;
			left: calc(50% - 24.25rem);
			width: 48.5rem;
			color: var(--Text-Default-Primary, #FFFFFE);
			text-align: center;
			text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
			font-family: "Bungee Inline", sans-serif;
			font-size: 2.5rem;
			font-style: normal;
			font-weight: 400;
			line-height: 120%;
			letter-spacing: -0.05rem;
			z-index: 100;
		}

		& > div {
			width: 100%;
			position: relative;
			height: 100%;
			overflow: hidden;
			background: rgba(0, 0, 0, 0.30);
			& > img {
				position: absolute;
				top: 0;
				left: 0;
				z-index: -1;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
		}
	}

	.right{
		width: max-content;
		flex-grow: 1;
	}

	@media (max-width: 768px) {
		main {
			flex-direction: column;
		}

		.left {
			& > h1 {
				left: 0;
				width: 100%;
				font-size: 1.5rem;
			}
		}
		.right{
			width: 100%;
		}
		
	}

</style>
