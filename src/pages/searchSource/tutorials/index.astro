---
import CardSource from "../../../components/CardSource.astro"
import MenuHeader from "../../../components/MenuHeader.astro"
import SearchComponente from "../../../components/SearchComponente.astro"
import LayoutPrincipal from "../../../layouts/LayoutPrincipal.astro"


const navItems = [
    {
        name: 'Busqueda de recursos',
        link: '/searchSource'
    },
    {
        name: 'Tutoriales',
        link: '/searchSource/tutorials'
    }
]
---

<LayoutPrincipal title="Articulos">
    <section>
        <MenuHeader navItems={navItems} />
        <div>
            <SearchComponente />
            <div class="content-cards">
                <CardSource title="C# for Beginners" link="https://learn.microsoft.com/en-us/shows/csharp-for-beginners/" date="" />
                <CardSource title="Learn C#" link="https://learn.microsoft.com/en-us/collections/yz26f8y64n7k07" date="Fecha: October 3, 2024" />
            </div>
        </div>
    </section>
</LayoutPrincipal>

<style>
    section{
        width: 80%;

        & > div{
            width: calc(50% + 20rem);
            display: flex;
            flex-direction: column;
            justify-items: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
            margin: 2rem;
        }
    }


    .content-cards{
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-items: start;
        align-items: start;
        flex-wrap: wrap;
        gap: 2rem;
    }
</style>